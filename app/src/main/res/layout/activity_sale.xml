<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.rebuytest.activity.SaleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#F9C71E">

        <ImageButton
            android:id="@+id/btn_sale_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ic_return" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:background="#F9C71E"
            android:text="发布信息"
            android:textColor="#fff"
            android:textSize="24sp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView_sale"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="标题"
                android:layout_marginLeft="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:hint="描述一下你的物品"
                android:layout_marginLeft="5dp"
                />

            <!--电话-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="电话"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#F9C71E"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="点击输入"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

            <!--QQ号-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="QQ号"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textColor="#F9C71E"
                    android:layout_marginLeft="5dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="点击输入"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

            <!--分类-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="分类"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textColor="#F9C71E"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

            <!--出售方式-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="出售方式"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textColor="#F9C71E"
                    android:layout_marginLeft="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp">

                    <CheckBox
                        android:id="@+id/cb_sale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="卖东西"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        app:theme="@style/cb_style"
                        />

                    <CheckBox
                        android:id="@+id/cb_exchange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="换东西"
                        android:layout_weight="1"
                        app:theme="@style/cb_style"/>

                    <CheckBox
                        android:id="@+id/cb_auction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="拍卖"
                        android:layout_weight="1"
                        app:theme="@style/cb_style"/>
                </LinearLayout>
            </LinearLayout>


            <!--一口价-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="一口价"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textColor="#F9C71E"
                    android:layout_marginLeft="5dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="点击输入"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

            <!--物换物-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:text="物换物"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:textColor="#F9C71E"
                    android:layout_marginLeft="5dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="点击输入"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>


            <!--数量-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="数量"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textColor="#F9C71E"
                    android:layout_marginLeft="5dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="点击输入"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

            <!--拍卖-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="拍卖"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textColor="#F9C71E"
                    android:layout_marginLeft="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="起价"
                            android:textSize="18sp"
                            android:layout_gravity="center"
                            android:gravity="center"/>
                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:hint="起价"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="加价"
                            android:textSize="18sp"
                            android:layout_gravity="center"
                            android:gravity="center"/>
                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:hint="加价"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <!--数量-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="结束时间"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textColor="#F9C71E"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="2019-04-05"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/btn_confirm_to_send"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FF0000"
            android:text="确定发布"
            android:textSize="24sp"
            android:textColor="#FFF"/>
    </LinearLayout>
</LinearLayout>
