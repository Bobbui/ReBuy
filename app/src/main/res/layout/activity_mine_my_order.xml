<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.rebuytest.fragment.activity.MineMyOrderActivity">


    <LinearLayout
        style="@style/style_layout">

        <ImageButton
            style="@style/title_bar_button"/>

        <TextView
            style="@style/title_bar_textview"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:text="我的订单"
            />
    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/myorder_tablayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:tabGravity="fill"
        app:tabTextColor="#D3D3D3"
        app:tabIndicatorColor="#F9C71E"
        app:tabSelectedTextColor="#000"
        >

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/myorder_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>
