<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    tools:context="com.example.rebuytest.fragment.activity.MineMyInfoActivity">

    <LinearLayout
        style="@style/style_layout">

        <ImageButton
            style="@style/title_bar_button"/>

        <TextView
            style="@style/title_bar_textview"
            android:text="个人资料"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--昵称-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/textview_border">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="昵称"
                android:textColor="#F9C71E"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="猫吃鱼"
                android:textSize="18sp"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <!--手机号-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/textview_border">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="QQ号"
                android:textColor="#F9C71E"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="15603382650"
                android:textSize="18sp"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <!--QQ号-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/textview_border">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="分类"
                android:textColor="#F9C71E"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="754449629"
                android:textSize="18sp"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <!--个性签名-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/textview_border">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="个性签名"
                android:textColor="#F9C71E"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="猫吃鱼，狗吃肉，凹凸曼打打小怪兽"
                android:textSize="18sp"
                />

        </LinearLayout>

        <!--头像-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/textview_border">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="头像"
                android:textColor="#F9C71E"
                android:textSize="18sp" />

            <com.example.rebuytest.utils.CircleImageUtil
                android:id="@+id/message_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/bg_banner1"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
