<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rebuytest">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:name=".ReBuyApplication"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher_new"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".business.mine.business.myorder.view.activity.MineMyOrderActivity"></activity>
        <activity android:name=".business.mine.business.settings.MineSettingsActivity" />
        <activity android:name=".business.mine.business.mycollection.activity.MineMyCollectionActivity" />
        <activity android:name=".business.mine.business.myshop.view.activity.MineMyShopActivity" />
        <activity android:name=".business.mine.business.myinfo.activity.MineMyInfoActivity" />
        <activity android:name=".business.message.view.activity.MessageContentActivity" />
        <activity android:name=".business.home.busniess.activity.LikeActivity" />
        <activity android:name=".business.home.busniess.activity.SaleActivity" />
        <activity android:name=".business.home.busniess.activity.EasyGoActivity" />
        <activity android:name=".business.account.register.RegisterActivity" />
        <activity
            android:name=".business.account.login.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".business.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".business.MainActivity" />
    </application>

</manifest>